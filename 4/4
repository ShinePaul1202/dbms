CREATE TABLE EMPLOYEE (ID CHAR(5) PRIMARY KEY,DeptID INT,Name VARCHAR(15),Designation VARCHAR(15),Basic DECIMAL(10,2),Gender CHAR(1),FOREIGN KEY (DeptID) REFERENCES DEPARTMENT(DeptID));


CREATE TABLE DEPARTMENT (
    DeptID INT PRIMARY KEY,
    DName VARCHAR(50)
);


INSERT INTO DEPARTMENT (DeptID, DName) VALUES
(1, 'DESIGN'),
(2, 'CODING'),
(3, 'TESTING'),
(4, 'RESEARCH');


