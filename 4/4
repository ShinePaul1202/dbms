4. SELECT MAX(Basic) AS Max_Salary  FROM EMPLOYEE  WHERE Gender = 'F';

7. UPDATE EMPLOYEE SET Joining_Date = '2020-01-01' WHERE ID = 101;


13. SELECT SUM(Basic) AS TotalSalary
FROM EMPLOYEE E 
JOIN DEPARTMENT D ON E.DeptID = D.DeptID 
WHERE D.DName = 'DESIGN';


15. SELECT E.Name,E.Basic 
FROM EMPLOYEE E 
JOIN DEPARTMENT D ON E.DeptID = D.DeptID 
WHERE D.DName = 'RESEARCH';


18. SELECT D.DName 
FROM DEPARTMENT D 
JOIN EMPLOYEE E ON E.DeptID = D.DeptID
GROUP BY D.DName 
ORDER BY sum(E.Basic) DESC 
LIMIT 1;


19. SELECT D.DName 
FROM DEPARTMENT D 
JOIN EMPLOYEE E ON E.DeptID = D.DeptID 
GROUP BY D.DName 
ORDER BY COUNT(E.ID) ASC LIMIT 1;


20. SELECT DISTINCT Basic FROM EMPLOYEE ORDER BY Basic DESC LIMIT 1 OFFSET 1;


21. SELECT DISTINCT Basic FROM EMPLOYEE ORDER BY Basic ASC LIMIT 1 OFFSET 1;


